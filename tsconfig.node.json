{
    "compilerOptions": {
        "target": "ES2022",
        "lib": [
            "ES2023"
        ],
    "module": "ESNext",
    "skipLibCheck": true,
    "composite": true,
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./.tsbuild",
    "types": ["node"],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true
    },
    "include": [
        "vite.config.ts"
    ]
}
