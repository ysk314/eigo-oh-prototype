rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function adminRole() {
      return request.auth != null
        ? get(/databases/$(database)/documents/admin_roles/$(request.auth.uid)).data.role
        : null;
    }

    function isAdmin() {
      return adminRole() == 'owner'
        || adminRole() == 'admin'
        || adminRole() == 'staff';
    }

    match /admin_roles/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if false;
    }

    match /users/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow write: if (request.auth != null && request.auth.uid == userId) || isAdmin();
    }

    match /users/{userId}/{document=**} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /member_profiles/{memberNo} {
      allow get: if request.auth != null;
      allow list: if isAdmin();
      allow create, update, delete: if isAdmin();
    }

    match /progress/{userId}/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_stats/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_recent_sections/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /user_recent_sessions/{userId} {
      allow read: if (request.auth != null && request.auth.uid == userId) || isAdmin();
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /member_counters/{yearId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null
        && request.resource.data.keys().hasOnly(['lastNumber', 'updatedAt'])
        && request.resource.data.lastNumber is int
        && request.resource.data.lastNumber == 1;
      allow update: if request.auth != null
        && request.resource.data.keys().hasOnly(['lastNumber', 'updatedAt'])
        && request.resource.data.lastNumber is int
        && request.resource.data.lastNumber == resource.data.lastNumber + 1;
    }

    match /auth_students/{memberNo} {
      allow read, write: if false;
    }

    match /analytics_events/{eventId} {
      allow create: if request.auth != null
        && request.resource.data.keys().hasAll(['eventType', 'userId', 'payload', 'createdAt'])
        && request.resource.data.eventType is string
        && request.resource.data.payload is map;
      allow read: if isAdmin();
      allow update, delete: if false;
    }
  }
}
